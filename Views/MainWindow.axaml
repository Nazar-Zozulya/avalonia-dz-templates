<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:avalonia_dz_templates.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:avalonia_dz_templates.Views"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        Width="1200" Height="800"
        x:Class="avalonia_dz_templates.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        ExtendClientAreaChromeHints="NoChrome"
        ExtendClientAreaToDecorationsHint="True"
        
        Title="avalonia_dz_templates">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>
    
    <Grid ColumnDefinitions="370,*" Classes="MainGrid">
        <StackPanel Classes="Sidebar" Grid.Column="0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="5, 10">
                <Button Width="52" Height="24" Background="Transparent">
                    <Image Source="avares://avalonia-dz-templates/Assets/button-theme-black.png" Height="36" />
                </Button>
            </StackPanel>
            <StackPanel>
                <ListBox Background="Transparent" ItemsSource="{Binding Cities}" SelectedItem="{Binding SelectedCity}">
                    <ListBox.Styles>
                        <Style Selector="ListBoxItem">
                            <Setter Property="CornerRadius" Value="8" />
                            <Setter Property="Width" Value="330" />
                            <Setter Property="Height" Value="90" />
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Padding" Value="8" />
                            <Setter Property="Margin" Value="10" />
                        </Style>
                        <Style Selector="ListBoxItem:pointerover /template/ContentPresenter">
                            <Setter Property="Background" Value="#55000000" />
                        </Style>
                        <Style Selector="ListBoxItem:selected /template/ContentPresenter">
                            <Setter Property="Background" Value="#33000000" />
                        </Style>
                    </ListBox.Styles>
                    <ListBox.ItemTemplate >
                        <DataTemplate >
                            <DockPanel LastChildFill="False">
                                
                                <StackPanel HorizontalAlignment="Left" DockPanel.Dock="Left">
                                    <StackPanel Orientation="Horizontal" Spacing="3">
                                        <Image Source="avares://avalonia-dz-templates/Assets/navigation.png" Width="16" />
                                        <TextBlock Text="{Binding Name}" FontSize="24" Foreground="White" FontWeight="Bold" />
                                    </StackPanel>
                                    <TextBlock Text="15:24" FontSize="12" Foreground="White" />
                                    <TextBlock Text="{Binding Description}" FontSize="12" Foreground="White" />
                                </StackPanel>
                                <StackPanel HorizontalAlignment="Right" DockPanel.Dock="Right" >
                                    <TextBlock Text="{Binding Temperature, StringFormat='{}{0}°'}" FontSize="44" Foreground="White" FontWeight="Bold" TextAlignment="Right" />
                                    <TextBlock FontSize="12" Foreground="White">
                                        <TextBlock.Text>
                                            <MultiBinding StringFormat="Макс.:{0}°, мін.:{1}°" >
                                                <Binding Path="MaxTemp" />
                                                <Binding Path="MinTemp" />
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </StackPanel>
                                <Rectangle Width="314" Height="1" Fill="White" DockPanel.Dock="Bottom" Opacity="0.2" />
                            </DockPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Column="1" Spacing="20" Margin="0, 30, 0, 0" >
            <StackPanel Classes="Header" Orientation="Horizontal">
                <StackPanel Classes="SettingsBlock"> 
                    <Button Classes="SettingsButton"><Image Source="avares://avalonia-dz-templates/Assets/settings.png" /></Button>
                    <TextBlock Text="Settings" Classes="SettingsLabel"/>
                </StackPanel>
                <TextBox Classes="SearchInput" Watermark="Пошук"/>
            </StackPanel>
            <StackPanel Classes="ContentBlock" Orientation="Horizontal">
                <views:CurrentWeatherView
                    DataContext="{Binding SelectedCity}"
                    /> 
                <views:ClockView
                    DataContext="{Binding $parent[Window].DataContext}"
                />
            </StackPanel>
            <views:HourlyForecastView DataContext="{Binding SelectedCity}"  />
            <Grid Classes="WeatherInfoForHours">
            </Grid>

        </StackPanel>
    </Grid>    
</Window>
