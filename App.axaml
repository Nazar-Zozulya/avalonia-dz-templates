<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="avalonia_dz_templates.App"
             xmlns:local="using:avalonia_dz_templates"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <FluentTheme />
        <Style Selector="Grid.MainGrid">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0%, 100%" EndPoint="100%, 0%">
                        <GradientStop Offset="0.05" Color="#87CEFA"/>
                        <GradientStop Offset="1.0" Color="#FFDF56"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Width" Value="1200" />
            <Setter Property="Height" Value="800" />
        </Style>

        <Style Selector="StackPanel.Sidebar">
            <Setter Property="Background" Value="#66000000" />
            <!-- <Setter Property="Opacity" Value="0.2" /> -->
            <Setter Property="Width" Value="370" />
            <Setter Property="Height" Value="800" />
        </Style>

        <Style Selector="StackPanel.Header">
            <Setter Property="Width" Value="800" />
            <Setter Property="Height" Value="40" />
            <Setter Property="Spacing" Value="420"/>
        </Style>

        <Style Selector="StackPanel.SettingsBlock">
            <Setter Property="Orientation" Value="Horizontal" />
            <Setter Property="Spacing" Value="10" />
        </Style>

        <Style Selector="Button.SettingsButton">
            <Setter Property="Background" Value="#33000000" />
            <Setter Property="Width" Value="40" />
            <Setter Property="Height" Value="40" />
        </Style>

        <Style Selector="TextBlock.SettingsLabel">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <Style Selector="TextBox.SearchInput">
            <Setter Property="Width" Value="260" />
            <Setter Property="Height" Value="40" />
        </Style>

        <Style Selector="StackPanel.ContentBlock">
            <Setter Property="Width" Value="800" />
            <Setter Property="Height" Value="300" />
            <Setter Property="Spacing" Value="10" />
        </Style>

        <Style Selector="Grid.WeatherInfoAboutSelectedCity">
            <Setter Property="Width" Value="400" />
            <Setter Property="Height" Value="300" />
            <Setter Property="Background" Value="#33000000" />

        </Style>

        <Style Selector="Grid.TimeBlock">
            <Setter Property="Width" Value="400" />
            <Setter Property="Height" Value="300" />
            <Setter Property="Background" Value="#33000000" />

        </Style>

        <Style Selector="Grid.WeatherInfoForDays">
         <Setter Property="Width" Value="800" />
            <Setter Property="Height" Value="160" />
            <Setter Property="Background" Value="#33000000" />
        </Style>

        <Style Selector="Grid.WeatherInfoForHours">
            <Setter Property="Width" Value="800" />
            <Setter Property="Height" Value="160" />
            <Setter Property="Background" Value="#33000000" />
        </Style>
        <Style Selector="ListBoxItem">
            <Setter  Property="Background" Value="Transparent"></Setter>
        </Style>
        <Style Selector="ListBoxItem:pointerover">
            <Setter  Property="Background" Value="Transparent"></Setter>
        </Style>
        <Style Selector="ListBoxItem:selected">
            <Setter  Property="Background" Value="Transparent"></Setter>
        </Style>
        <!-- <Style Selector="ListBoxItem:pointerover  > ContentPresenter"> -->
        <!--     <Setter  Property="Background" Value="Transparent"></Setter> -->
        <!-- </Style> -->
        <!-- <Style Selector="ListBoxItem:selected  > ContentPresenter"> -->
        <!--     <Setter  Property="Background" Value="Transparent"></Setter> -->
        <!-- </Style> -->
        <!-- <Style Selector="ListBoxItem:pointerover:selected  > ContentPresenter"> -->
        <!--     <Setter  Property="Background" Value="Transparent"></Setter> -->
        <!-- </Style> -->
    </Application.Styles>
</Application>